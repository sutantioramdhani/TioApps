<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="6dp"
    card_view:cardElevation="3dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:padding="5dp">

        <!-- TextView Nama Mahasiwa -->
        <TextView
            android:id="@+id/txt_nama_kegiatan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_toRightOf="@id/img_kegiatan"/>

        <!-- TextView Npm Mahasiswa -->
        <TextView
            android:id="@+id/txt_jam_kegiatan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_toRightOf="@id/img_kegiatan"
            android:layout_below="@id/txt_nama_kegiatan"/>

        <ImageView
            android:id="@+id/img_kegiatan"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:tint="@color/spirodiscoball"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>