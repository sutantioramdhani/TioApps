<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="6dp"
    card_view:cardElevation="3dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <!-- TextView Nama Mahasiwa -->
        <TextView
            android:id="@+id/txt_judul_music"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_toRightOf="@id/Musik"/>

        <!-- TextView Npm Mahasiswa -->
        <TextView
            android:id="@+id/txt_penyanyi_music"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_toRightOf="@id/Musik"
            android:layout_below="@id/txt_judul_music"/>

        <ImageView
            android:id="@+id/Musik"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/lagu"/>
        <View
            android:id="@+id/view1"
            android:layout_width="2dp"
            android:layout_height="70dp"
            android:background="@color/abu3"
            android:layout_toRightOf="@id/txt_judul_music"
            />
        <ImageView
            android:id="@+id/btn_play"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/play_button"
            android:tint="@color/birutua"
            android:layout_toRightOf="@id/view1"
            android:layout_centerVertical="true"
            android:layout_margin="20dp"
            />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/rounded_pause_button"
            android:tint="@color/birutua"
            android:layout_toRightOf="@id/btn_play"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>

</android.support.v7.widget.CardView>